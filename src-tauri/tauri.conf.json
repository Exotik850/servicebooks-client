{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build:web",
    "beforeDevCommand": "npm run dev:web",
    "withGlobalTauri": true,
    "devPath": "http://localhost:5471",
    "distDir": "../build"
  },
  "package": {
    "productName": "servicebooks-client",
    "version": "0.1.10"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.github.com/Exotik850/59af87fb03afaea799f0040862c08d4d/raw"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDczNkMyODU0MUVFRkY3MwpSV1J6Lys1QmhjSTJCOTIwbzIxYk4wMzFHWlVtaDlnRHAyOTVQeGFkLzNON1J3WStLZHdFdyswSgo="
    },
    "allowlist": {
      "window": {
        "close": true,
        "maximize": true,
        "minimize": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      },
      "dialog": {
        "open": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Finance",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.exotik850.servicebooks",
      "longDescription": "",
      "resources": [],
      "shortDescription": "A simple data entry application for handling warranty claims with Quickbooks and ServicePower",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "title": "Servicebooks-Client",
        "decorations": false,
        "width": 900,
        "focus": true,
        "center": true,
        "visible": true
      },
      {
        "fullscreen": false,
        "height": 500,
        "width": 500,
        "title": "OAuth2.0 Authorization",
        "url": "/login.html",
        "decorations": true,
        "focus": true,
        "center": true,
        "label": "login"
      }
    ]
  }
}
